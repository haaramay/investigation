    return;
  }
  pathLength = orig.getTotalLength();
  distancePerPoint = pathLength/(drawFPS*(song_time-1));
  if(!paused)
  {
    length = 0;
  }
  startDrawingPath();
}

function startDrawingPath(){
  //orig.style.stroke = '#f60';
